<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      alignment="CENTER"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.oryreq.montecarlomethod.windows.binomial_croupier.subwindows.input_data.InputDataController"
      prefHeight="115.0" prefWidth="200.0"
      styleClass="input_distribution_data__container">


    <TextField fx:id="numbersCount" promptText="Input count of numbers can be played" styleClass="distribution_window__inputs"/>
    <TextField fx:id="binomialProbability" promptText="Input success probability" styleClass="distribution_window__inputs"/>
    <TextField fx:id="drawsCount" promptText="Input count of draws" styleClass="distribution_window__inputs"/>
    <Button text="Submit!" onAction="#onSubmitButtonClick"/>

</VBox>

